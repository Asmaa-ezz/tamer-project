    <div class="form-container">
      <input id='step2' type='checkbox'>
      <input id='step3' type='checkbox'>
      <div id="part1" class="form-group">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">اضافة كتاب</h3>
          </div>
          <div class="panel-content">
            <label for="name-book">اسم الكاتب : </label>
            <input type="text" id="name-book" class="form-control" placeholder="اسم الكاتب">
            <label for="image">صورة الكتاب : </label>
            <input type="text" id="image" class="form-control" placeholder="صورة الكتاب">
            <label for="describe">تفاصيل الكتاب : </label>
            <input type="text" id="describe" class="form-control" placeholder="تفاصيل الكتاب">
            <label for="name-author">اسم المؤلف : </label>
            <input type="text" id="name-author" class="form-control" placeholder="اسم المؤلف">
            <div>
              <label for="category">التصنيف :
            </div>
            <div>
              <select class="styled" name="category" id="category">
                <option value="">إختر التصنيف</option>
                <option value="sciences">علوم</option>
                <option value="children">أطفال</option>
              </select>
              <button class="button button--remind button--add" onclick="AddNewCategory()">إضافة تصنيف</button>
              </label>
            </div>
          </div>
          <div class="panel-content--category" id="button-add-category">
            <div class="panel-content--category-header">
              <h3>اضافة تصنيف</h3>
            </div>
            <div class="panel-content--category-content">
              <label for="serial-number"> اسم التصنيف : </label>
              <input type="text" value="501.2.3.1" id="serial-number" class="form-control" placeholder=" اسم التصنيف ">
              <label for="serial-number">الرقم التسلسلي : </label>
              <input type="text" value="501.2.3.1" id="serial-number" class="form-control" placeholder="الرقم التسلسلي ">
              <button class="button button--remind button--add button--margin" onclick="AddNewCategoryBook()"> اضافة</button>
            </div>
          </div>
          <button class="button button--remind button--add button--margin" onclick="AddNewBook()"> اضافة كتاب جديد</button>
          <div class="btn-group btn-group-lg" role="group" aria-label="...">
            <label for='step2' id="continue-step2" class="continue">
              <div class="button button--view btn__next" id="next">التالي</div>
            </label>
          </div>
        </div>
      </div>
      <div id="part2" class="form-group">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">إضافة للمكتبة</h3>
          </div>
          <div class="panel-content">
            <label for="section">القسم : </label>
            <input type="number" id="section" class="form-control" placeholder="القسم">
            <label for="shelf">الرف : </label>
            <input type="number" id="shelf" class="form-control" placeholder="الرف">
            <label for="shelf">عدد النسخ : </label>
            <input type="number" id="shelf" class="form-control" placeholder="عدد النسخ">
            <label for="serial-number">الرقم التسلسلي : </label>
            <input type="text" value="501.2.3.1" id="serial-number" class="form-control" placeholder="الرقم التسلسلي ">
          </div>
          <button class="button button--remind button--add button--margin"> اضافة الى المكتبة</button>
          <div class="btn-group btn-group-lg btn-group-justified" role="group" aria-label="...">
            <label for='step2' id="back-step2" class="back">
              <div class="button button--delete" role="button">السابق</div>
            </label>
            <label for='step3' id="continue-step3" class="continue">
              <div class="button button--view" role="button">تخطى</div>
            </label>
          </div>
        </div>
      </div>
      <div id="part3" class="form-group">
        <div class="panel panel-primary">
          <div class="panel-heading">
            <h3 class="panel-title">إضافة للمخزن :</h3>
          </div>
          <div class="panel-content">
            <label for="num-co">عدد النسخ : </label>
            <input type="number" id="num-co" class="form-control" placeholder="عدد النسخ">
          </div>
          <div class="btn-group btn-group-lg" role="group" aria-label="...">
            <button class="button button--remind button--add button--margin"> اضافة الى المخزن</button>
            <label for='step3' id="back-step3" class="back">
              <div class="button button--delete">السابق</div>
